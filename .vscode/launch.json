{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug big.txt with mmap",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin",
                    "qgrs"
                ]
            },
            "args": [
                "--file",
                "${workspaceFolder}/big.txt",
                "--output-dir",
                "${workspaceFolder}/output"
            ]
        },
        {
            "name": "Debug big.txt with stream",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin",
                    "qgrs"
                ]
            },
            "args": [
                "--file",
                "${workspaceFolder}/big.txt",
                "--output-dir",
                "${workspaceFolder}/output",
                "--mode",
                "stream"
            ]
        },
        {
            "name": "Debug dme.fa with mmap",
            "type": "lldb",
